<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="core.login.LoginController"
      spacing="20" alignment="CENTER"
      prefWidth="400" prefHeight="250"
      style="-fx-padding: 20;">
    <children>

        <Label text="Control de Presencia"
               style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <!-- HBox centrado -->
        <HBox spacing="10" alignment="CENTER">
            <!-- Etiqueta algo más “atrás” con prefWidth más grande -->
            <Label text="DNI:"
                   prefWidth="60"
                   style="-fx-font-size: 14px; -fx-alignment: CENTER_RIGHT;" />
            <!-- TextField centrado y del mismo ancho que el botón -->
            <TextField fx:id="tfDni"
                       promptText="Introduce tu DNI"
                       prefWidth="200"
                       style="-fx-font-size: 14px;" />
        </HBox>

        <Button text="Entrar"
                onAction="#onEntrar"
                prefWidth="200"
                style="-fx-font-size: 16px;" />

        <Label fx:id="lblMensaje"
               style="-fx-font-size: 14px; -fx-text-fill: red;" />
    </children>
</VBox>


